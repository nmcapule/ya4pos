    "version": "0.2.0",
    "configurations": [
        {
            "request": "launch",
            "name": "Launch Server",
            "type": "node",
            "program": "${workspaceFolder}/server/main.ts",
            "cwd": "${workspaceFolder}/server",
            "runtimeExecutable": "/home/codespace/.deno/bin/deno",
            "runtimeArgs": [
                "run",
                "--config",
                "./deno.json",
                "--inspect-wait",
                "--allow-all"
            ],
            "attachSimplePort": 9229
        }
    ]
}
